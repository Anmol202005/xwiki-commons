{
  // Skip Eclipse M2E special setup "dependency"
  // Skip jdom 1 since jdom 2 actually use a different id now
  "ignoreDeps": ["org.eclipse.m2e:lifecycle-mapping", "org.jdom:jdom"],

  // There is no point trying to find update for commons dependencies
  "packageRules": [
    {
      "matchPackagePrefixes": ["org.xwiki.commons:"],
      "enabled": false
    },

    // Maven Central contains an old (but very high in term of version) bad version of commons-collections:commons-collections so making sure we match the right ones
    {
      "matchPackageNames": ["commons-collections:commons-collections"],
      "allowedVersions": "/^3\..*$/"
    },
    // Maven Central contains an old (but very high in term of version) bad version of antlr:antlr so making sure we match the right ones
    {
      "matchPackageNames": ["antlr:antlr"],
      "allowedVersions": "/^2\..*$/"
    },

    // Various dependencies we cannot update yet because of the move to jakarta package
    {
      "matchPackagePrefixes": ["org.glassfish.jaxb", "jakarta.xml.bind"],
      "allowedVersions": "/^2\..*$/"
    },
    {
      "matchPackagePrefixes": ["jakarta.transaction"],
      "allowedVersions": "/^1\..*$/"
    },
    {
      "matchPackagePrefixes": ["jakarta.annotation"],
      "allowedVersions": "/^1\..*$/"
    },
    {
      "matchPackagePrefixes": ["jakarta.validation"],
      "allowedVersions": "/^2\..*$/"
    },
    {
      "matchPackagePrefixes": ["org.hibernate.validator"],
      "allowedVersions": "/^6\..*$/"
    },
    {
      "matchPackagePrefixes": ["ch.qos.logback"],
      "allowedVersions": "/^1\.3\..*$/"
    },
    {
      "matchPackagePrefixes": ["javax.servlet"],
      "allowedVersions": "/^3\..*$/"
    },
    {
      "matchPackagePrefixes": ["jakarta.mail", "com.sun.mail"],
      "allowedVersions": "/^1\..*$/"
    },
    {
      "matchPackagePrefixes": ["jakarta.activation", "com.sun.activation"],
      "allowedVersions": "/^1\..*$/"
    },
    {
      "matchPackagePrefixes": ["org.mortbay.jasper:apache-el"],
      "allowedVersions": "/^9\..*$/"
    }
  ]
}